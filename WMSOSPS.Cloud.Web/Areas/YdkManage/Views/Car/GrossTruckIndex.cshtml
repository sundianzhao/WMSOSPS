
@{
    ViewBag.Title = "GrossTruckIndex";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script src="~/Content/ZH/js/app/YdkManage/Car/GrossTruckIndex.js"></script>
<style>
    .search {
        margin: 0 !important;
        padding-right: 10px;
        overflow-x: auto;
        overflow-y: hidden;
    }

        .search form {
            width: 100%;
            overflow-x: auto;
            white-space: nowrap;
        }

    .operate {
        padding-left: 10px;
        margin-right: 60px;
        display: none;
        overflow-x: auto;
        overflow-y: hidden;
    }

        .operate ul {
            width: 100%;
            overflow-x: auto;
            white-space: nowrap;
        }

            .operate ul li {
                display: inline-block;
                float: none;
            }

                .operate ul li a {
                    padding: 6px 12px;
                }

                .operate ul li a {
                    padding: 6px 12px;
                }

    a {
        color: blue;
    }
</style>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
        </div>

        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="operate" style="">
        <ul class="nav nav-pills " style="float:left;">
            <li class="first">已选中<span>1</span>项</li>
            <li><a id="NF-Details" authorize="yes" class="btn btn-primary" onclick="$.Index.btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
        </ul>
        <a href="javascript:;" class="close"></a>
        <script>$('.operate').authorizeButton()</script>
    </div>

    <div class="search">
        <table style="">
            <tr>
                <td style="width:180px">
                    <div id="txt_condition" class="input-group" style="width:150px">
                        <select id="ydk" name="ydk" class="form-control" style="height:30px;" onchange="$.Index.btn_search()">
                            <option value="">==选择异地库==</option>
                        </select>
                    </div>
                </td>
                <td style="display:none"> 
                    <button id="btn_search" type="button" class="btn btn-primary"><i class="fa fa-search"></i></button>
                </td>
            </tr>
        </table>
    </div>
    <script>$('.search').authorizeButton()</script>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>