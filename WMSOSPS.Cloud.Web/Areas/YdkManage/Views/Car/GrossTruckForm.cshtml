
@{
    ViewBag.Title = "GrossTruckForm";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/ZH/js/app/YdkManage/Car/GrossTruckForm.js"></script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li id="liBasicInfo" class="active"><a href="javascript:void(0);" onclick="$.Form.fun_xx('BasicInfo')">基本信息</a></li>
            <li id="liImgInfo" ><a href="javascript:void(0);" onclick="$.Form.fun_xx('ImgInfo')">图片信息</a></li> 
        </ul>
        <div style="padding-top: 20px; margin-right: 20px;" id="BasicInfo">
            <table class="form">
                <tr>
                    <th class="formTitle">提货单号</th>
                    <td class="formValue">
                        <input id="F_OrderNo" name="F_OrderNo" type="text" class="form-control required" />
                    </td>
                </tr>

                <tr>
                    <th class="formTitle">提货单位</th>
                    <td class="formValue">
                        <input id="F_Company" name="F_Company" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">车牌号</th>
                    <td class="formValue">
                        <input id="F_TruckNo" name="F_TruckNo" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">毛重(吨)：</th>
                    <td class="formValue">
                        <input id="F_GrossWeight" name="F_GrossWeight" type="text" class="form-control required " />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">皮重(吨)：</th>
                    <td class="formValue">
                        <input id="F_TruckWeight" name="F_TruckWeight" type="text" class="form-control required " />
                    </td>
                </tr>

                <tr>
                    <th class="formTitle">净重(吨)：</th>
                    <td class="formValue">
                        <input id="F_NetWeight" name="F_NetWeight" type="text" class="form-control required " />
                    </td>
                </tr>

            </table>
        </div>
        <div  style="padding-top: 20px; margin-right: 20px; display:none;align-content:center" id="ImgInfo">
            <img id="pic" style="width:400px;height:300px;display:none"  src="" onclick="$.Form.Chakan()"/> 
        </div>
    </div>
</form>

