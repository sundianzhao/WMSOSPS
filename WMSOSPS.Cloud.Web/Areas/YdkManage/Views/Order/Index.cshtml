    <div class="search">
        <form class="form-inline" role="form">
            <div class="input-group" style="width:160px;">
                <select id="ydk" name="ydk" class="form-control" onchange="$.Index.btn_search()">
                    <option value="">==选择异地库==</option>
                </select>
            </div>
            <div class="input-group">
                <input class="form-control" id="txt_keyword" type="text" placeholder="交货单号" style="width:120px;">
            </div> 
            <span id="F_StatusTime1Text">时间 起:</span>
            <div class="input-group">
                <input id="F_Time1" name="F_Time1" type="text" class="form-control input-wdatepicker" style="width:100px;" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" />
            </div>
            <span id="F_StatusTime2Text">止:</span>
            <div class="input-group">
                <input id="F_Time2" name="F_Time2" type="text" class="form-control input-wdatepicker" style="width:100px;" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" />
            </div>

            <div class="input-group">
                <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
            </div>
        </form>

    </div>
    <script>$('.search').authorizeButton()</script>
</div>
