
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script src="~/Content/js/datepicker/WdatePicker.js"></script>
<script src="~/Content/ZH/js/app/YdkManage/Order/Index.js?v=1.0"></script>
<style>
    .search {
        margin: 0 !important;
        padding-right: 10px;
        overflow-x: auto;
        overflow-y: hidden;
    }

        .search form {
            width: 100%;
            overflow-x: auto;
            white-space: nowrap;
        }

    .operate {
        padding-left: 10px;
        margin-right: 60px;
        display: none;
        overflow-x: auto;
        overflow-y: hidden;
    }

        .operate ul {
            width: 100%;
            overflow-x: auto;
            white-space: nowrap;
        }

            .operate ul li {
                display: inline-block;
                float: none;
            }

                .operate ul li a {
                    padding: 6px 12px;
                }

                .operate ul li a {
                    padding: 6px 12px;
                }

    a {
        color: blue;
    }
</style>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
        </div>

        <script>$('.toolbar').authorizeButton()</script>
    </div>
