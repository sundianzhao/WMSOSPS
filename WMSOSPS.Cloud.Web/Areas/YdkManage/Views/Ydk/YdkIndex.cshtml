
@{
    ViewBag.Title = "YdkIndex";
    Layout = "~/Views/Shared/_Index.cshtml";
}
 
<script src="~/Content/ZH/js/app/YdkManage/YdkIndex.js?v=1.0"></script>
<style>
    .search {
        margin: 0 !important;
        padding-right: 10px;
        overflow-x: auto;
        overflow-y: hidden;
    }

        .search form {
            width: 100%;
            overflow-x: auto;
            white-space: nowrap;
        }

    .operate {
        padding-left: 10px;
        margin-right: 60px;
        display: none;
        overflow-x: auto;
        overflow-y: hidden;
    }

        .operate ul {
            width: 100%;
            overflow-x: auto;
            white-space: nowrap;
        }

            .operate ul li {
                display: inline-block;
                float: none;
            }

                .operate ul li a {
                    padding: 6px 12px;
                }

                .operate ul li a {
                    padding: 6px 12px;
                }

    a {
        color: blue;
    }
</style>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="$.Index.btn_add()"><i class="fa fa-plus"></i>添加</a>
        </div>

        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="operate" style="">
        <ul class="nav nav-pills " style="float:left;">
            <li class="first">已选中<span>1</span>项</li>
            <li><a id="NF-Delete" class="btn btn-primary" authorize="yes" onclick="$.Index.btn_delete()"><i class="fa fa-trash-o">删除</i></a></li>
        </ul>
        <a href="javascript:;" class="close"></a>
        <script>$('.operate').authorizeButton()</script>

    </div>

    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入异地库编号" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <script>$('.search').authorizeButton()</script>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

