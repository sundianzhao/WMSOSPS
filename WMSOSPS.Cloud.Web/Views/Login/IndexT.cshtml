<script>
    var placeholdAni = function(obj, time) {
        time = time || 200;
        var focus = obj.hasClass('focus');
        var notNull = $.trim(obj.find('input').val()) != '';
        if (focus || notNull) {
            obj.find('.form-input-placehold').css({
                backgroundColor: '#fff'
            }).animate({
                    top: -7
                },
                time);
        } else {
            obj.find('.form-input-placehold').animate({
                    top: 15
                },
                time,
                function() {
                    $(this).css({
                        backgroundColor: ''
                    });
                });
        }
    };

    $('.form-input input')
        .on('focus',
            function() {
                var parent = $(this).parent('.form-input');
                parent.addClass('focus');
                placeholdAni(parent);
            })
        .on('blur',
            function() {
                var parent = $(this).parent('.form-input');
                parent.removeClass('focus');
                placeholdAni(parent);
            });
    $('.form-input').each(function(i, item) {
        placeholdAni($(item), 0);
    });
    $('.form-input-placehold').on('click',
        function() {
            $(this).siblings('input').focus();
        });

</script>





















